rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is Admin
    function isAdmin() {
      return request.auth != null && (
        // Option 1: Check for the "Admin Badge" (Custom Claim)
        request.auth.token.role == 'admin' || 
        
        // Option 2: Whitelist your specific email
        request.auth.token.email == 'goldenlamtouch@gmail.com'
      );
    }

    // --- CONFIG COLLECTION ---
    match /config/{docId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // --- FORMS COLLECTION ---
    match /forms/{formId} {
      allow get: if true;
      allow list: if request.auth != null;
      
      // Allow Admins to Create and Update forms directly from the website
      allow create, update: if isAdmin();
      // Delete must still use the Cloud Function
      allow delete: if false;
      
      match /private/{counterId} {
        allow read, write: if false;
      }
    }
    
    // --- GROUPS COLLECTION ---
    match /groups/{groupId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // --- SUBMISSIONS COLLECTION ---
    match /submissions/{submissionId} {
      allow read: if request.auth != null;
      allow create: if true; 
      allow update: if isAdmin();
    }
    
    // --- OTPS COLLECTION ---
    match /otps/{otpId} {
      allow read: if true;
      allow update: if true 
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isUsed'])
                    && request.resource.data.isUsed == true;
      allow create: if false;
    }

    // --- COORDINATORS COLLECTION ---
    match /coordinators/{coordId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // --- SYSTEM LOGS ---
    match /system_logs/{logId} {
      allow read: if isAdmin();
      allow write: if false; 
    }
  }
}